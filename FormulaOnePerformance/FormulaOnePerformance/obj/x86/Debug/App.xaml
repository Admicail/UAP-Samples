<Application
    x:Class="FormulaOnePerformance.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:FormulaOnePerformance.Converters"
    xmlns:base="using:FormulaOnePerformance.ViewModels.Base"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="Themes/Colors.xaml" />
            <ResourceDictionary Source="Themes/Hub.xaml" />
            <ResourceDictionary Source="Themes/GridView.xaml" />
        </ResourceDictionary.MergedDictionaries>

        <!-- ViewModelLocator -->
        <base:ViewModelLocator x:Key="Locator" />

        <!-- Converters -->
        <converters:ImageConverter x:Key="ImageConverter" />

    </ResourceDictionary>
    </Application.Resources>
</Application>

